<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.naplanner.features.login.LogInFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_LoginFragment_to_signUpChoiceFragment"
            app:destination="@id/signUpChoiceFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@anim/slide_out_to_right"
            app:popEnterAnim="@anim/slide_in_from_right"
            app:popExitAnim="@anim/slide_out_to_left" />
        <action
            android:id="@+id/action_LoginFragment_to_ownTasksFragment"
            app:destination="@id/ownTasksFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/LoginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.naplanner.features.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <argument
            android:name="isStudent"
            app:argType="boolean" />
        <action
            android:id="@+id/action_signUpFragment_to_FirstFragment"
            app:destination="@id/LoginFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popUpTo="@id/LoginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_teacherTasksFragment"
            app:destination="@id/ownTasksFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/LoginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpChoiceFragment"
        android:name="com.example.naplanner.features.signup.SignUpChoiceFragment"
        android:label="fragment_sign_up_choice"
        tools:layout="@layout/fragment_sign_up_choice" >
        <action
            android:id="@+id/action_signUpChoiceFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_from_top"
            app:exitAnim="@anim/slide_out_to_bot"
            app:popEnterAnim="@anim/slide_in_from_bot"
            app:popExitAnim="@anim/slide_out_to_top" />
    </fragment>
    <fragment
        android:id="@+id/teacherTasksFragment"
        android:name="com.example.naplanner.features.main.TeacherTasksFragment"
        android:label="fragment_teacher_tasks"
        tools:layout="@layout/fragment_teacher_tasks" >
        <action
            android:id="@+id/action_teacherTasksFragment_to_taskForm"
            app:destination="@id/taskForm" />
        <argument
            android:name="id"
            app:argType="string"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/taskForm"
        android:name="com.example.naplanner.features.main.CreateTaskFragment"
        android:label="fragment_task_form"
        tools:layout="@layout/fragment_create_task" >
        <argument
            android:name="isEdit"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="taskID"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="userID"
            app:argType="string"
            android:defaultValue="-1" />
        <argument
            android:name="teacherID"
            app:argType="string"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.naplanner.features.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_LoginFragment"
            app:destination="@id/LoginFragment"
            app:popUpTo="@id/teacherTasksFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/completeTasksFragment"
        android:name="com.example.naplanner.features.main.CompleteTasksFragment"
        android:label="fragment_complete_tasks"
        tools:layout="@layout/fragment_complete_tasks" >
        <action
            android:id="@+id/action_completeTasksFragment_to_taskForm"
            app:destination="@id/taskForm" />
    </fragment>
    <fragment
        android:id="@+id/ownTasksFragment"
        android:name="com.example.naplanner.features.main.OwnTasksFragment"
        android:label="fragment_own_tasks"
        tools:layout="@layout/fragment_own_tasks" >
        <action
            android:id="@+id/action_ownTasksFragment_to_taskForm"
            app:destination="@id/taskForm" />
    </fragment>
    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.naplanner.features.main.StudentListFragment"
        android:label="fragment_student_list"
        tools:layout="@layout/fragment_student_list" >
        <action
            android:id="@+id/action_studentListFragment_to_teacherTasksFragment"
            app:destination="@id/teacherTasksFragment" />
    </fragment>
</navigation>
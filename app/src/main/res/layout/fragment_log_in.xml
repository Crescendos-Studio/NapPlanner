<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".features.login.view.LogInFragment">

    <ImageView
        android:id="@+id/log_in_fragment_app_icon_image_view"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/books_app_ico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/sign_up_choice_fragment_professor_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_fragment_app_icon_image_view">


        <TextView
            android:id="@+id/log_in_fragment_mail_text_view"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/light_gray"
            android:padding="5dp"
            android:text="@string/generic_form_mail"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/log_in_fragment_mail_edit_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="2dp"
            android:background="@color/dark_gray"
            android:hint="@string/generic_form_mail"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/log_in_fragment_password_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_choice_fragment_professor_linear_layout">

        <TextView
            android:id="@+id/log_in_fragment_pass_text_view"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/light_gray"
            android:padding="5dp"
            android:text="@string/generic_form_password"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/log_in_fragment_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="2dp"
            android:background="@color/dark_gray"
            android:hint="@string/generic_form_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/log_in_fragment_link_to_sign_up_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_fragment_password_linear_layout">

        <TextView
            android:id="@+id/log_in_fragment_forgot_password_text_view"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:text="@string/log_in_forgot_password"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/log_in_fragment_link_to_sign_up_text"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:text="@string/log_in_fragment_form_sign_up"
            android:textAlignment="center"
            android:textColor="@color/blue" />
    </LinearLayout>

    <Button
        android:id="@+id/log_in_fragment_send_button"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_gray"
        android:text="@string/log_ing_fragment_button_send"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_fragment_link_to_sign_up_linear_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
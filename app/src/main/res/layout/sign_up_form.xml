<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".features.login.LogInFragment">

    <LinearLayout
        android:id="@+id/sign_up_fragment_username_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/sign_up_fragment_username_text_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/dark_blue"
            android:paddingHorizontal="5dp"
            android:text="@string/generic_form_user_text_view"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/sign_up_fragment_username_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/light_blue"
            android:hint="@string/generic_form_user_text_view"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_up_fragment_mail_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/sign_up_fragment_mail_text_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/dark_blue"
            android:paddingHorizontal="5dp"
            android:text="@string/generic_form_mail_edit_text"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/sign_up_fragment_mail_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/light_blue"
            android:hint="@string/generic_form_mail_edit_text"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_up_fragment_pass_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sign_up_fragment_pass_text_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/dark_blue"
            android:paddingHorizontal="5dp"
            android:text="@string/generic_form_password"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/sign_up_fragment_pass_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/light_blue"
            android:hint="@string/generic_form_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_up_fragment_confirm_pass_linear_layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_linear_layout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sign_up_fragment_confirm_pass_text_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/dark_blue"
            android:paddingHorizontal="5dp"
            android:text="@string/generic_form_confirm_password"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/sign_up_fragment_confirm_pass_edit_text"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/light_blue"
            android:hint="@string/generic_form_confirm_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

    </LinearLayout>

</LinearLayout>